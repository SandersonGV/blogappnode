
<h2>Categorias</h2>
<hr>
<a href="/admin/categorias/add" class="btn btn-info">Adicionar nova</a>

{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small>
      <small>Data de criação: {{date}}</small><br>
      <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success mt-2">Editar</a>
      <form method="POST" action="/admin/categorias/remove">
        <input name="id" type="hidden" value="{{_id}}">
        <button type="submit"class="btn btn-warning mt-2"> Deletar </button>
      </form>
    </div>
  </div>
  {{else}}
    <div class="card mt-4">
      <div class="card-body">
        <h4>Nenhuma categoria registrada</h4>
      </div>
    </div>

{{/each}}