
<div class="card">
  <div class="card-body">
    <h2 class="card-title">Editar categoria</h2>
    {{#each erros}}
      <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}
    <form action="/admin/categorias/edit" method="POST">
      <input type="hidden" name="id"  value="{{categoria._id}}">

      <div class="form-group">
        <label >Nome:</label>
        <input class="form-control" name="nome" placeholder="nome da categoria" value="{{categoria.nome}}">
      </div>
      <div class="form-group">
        <label >Slug</label>
        <input class="form-control" name="slug" placeholder="slug da categoria" value="{{categoria.slug}}">
      </div>
      <button type="submit" class="btn btn-primary">Confirmar</button>
    </form>
 </div>
</div>