
<h2>Postagens</h2>
<hr>
<a href="/admin/postagens/add" class="btn btn-info">Adicionar nova</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Slug: {{slug}}</small><br>
      <small>Autor: {{autor}}  </small><br>
      <small>Data de criação: {{date}}</small><br>
      <small>categoria: {{categoria.nome}}</small><br>
      <p>{{conteudo}}</p>

      <a href="/admin/postgens/edit/{{_id}}" class="btn btn-success mt-2">Editar</a>
      <form method="POST" action="/admin/postagens/remove">
        <input name="id" type="hidden" value="{{_id}}">
        <button type="submit"class="btn btn-warning mt-2"> Deletar </button>
      </form>
    </div>
  </div>
  {{else}}
    <div class="card mt-4">
      <div class="card-body">
        <h4>Nenhuma poostagem registrada</h4>
      </div>
    </div>

{{/each}}